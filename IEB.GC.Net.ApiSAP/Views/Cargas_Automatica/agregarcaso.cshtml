@model IEB.GC.Net.ApiSAP.Models.Casos_de_Combinacione

@{
    ViewBag.Title = "agregarcaso";
}

<h2>Casos de combinacion</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Casos_de_Combinacione</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">            
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Combinacion)                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Tipo, (SelectList)ViewBag.Listatipos, "Seleccionar", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Caso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Caso, new SelectList(new List<Object>
                { new {value="Caso",text="Caso" },
                  new {value="Combo", text="Combo" }}, "value", "text"),
                  new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Caso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Factor_de_modificacion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Factor_de_modificacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Factor_de_modificacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">           
            <div class="col-md-10">
                @Html.HiddenFor(model => model.id_subestacion) 
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index", new { id_subestacion = int.Parse(TempData.Peek("id").ToString()) })
</div>
