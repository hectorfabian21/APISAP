@model IEnumerable<IEB.GC.Net.ApiSAP.Models.Caso>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="container-fluid">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">

            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Inicio", new {sid=ViewData["subestacion_id"].ToString() })">Inicio</a>
                </li>
                <li>
                    <strong class="active">Casos</strong>
                </li>
            </ol>
            <p></p>
        </div>
        <div class="col-lg-2"></div>
    </div>

    <p>
        @Html.ActionLink("Crear caso", "Create", new { sid = int.Parse(ViewData["subestacion_id"].ToString()) })
    </p>
    <table class="table">
        <tr>
            <th>
                Nombre Caso
            </th>
            <th>
                Descripcion del caso
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_caso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion_caso)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @*@Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Borrar", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }

    </table>

</div>
