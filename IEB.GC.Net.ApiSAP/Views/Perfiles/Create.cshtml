@model IEB.GC.Net.ApiSAP.Models.Perfile

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Perfile</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre_del_perfil, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre_del_perfil, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre_del_perfil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Material_del_perfil, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">              
                @Html.DropDownListFor(model => model.Material_del_perfil, (SelectList)ViewBag.ListaMateriales, "Seleccionar", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Material_del_perfil, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.t3___mm_, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.t3___mm_, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.t3___mm_, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">           
            <div class="col-md-10">
                @Html.HiddenFor(model => model.t2__mm_)              
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tf__mm_, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tf__mm_, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tf__mm_, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">            
            <div class="col-md-12">
                @Html.HiddenFor(model => model.id_subestacion)                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index", new { id = int.Parse(TempData.Peek("id").ToString()) })
</div>
